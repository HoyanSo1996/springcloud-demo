<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.omega.springcloud.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.omega.springcloud.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <id column="name" property="name" jdbcType="VARCHAR"/>
        <id column="pwd" property="pwd" jdbcType="VARCHAR"/>
        <id column="mobile" property="mobile" jdbcType="VARCHAR"/>
        <id column="email" property="email" jdbcType="VARCHAR"/>
        <id column="gender" property="gender" jdbcType="TINYINT"/>
    </resultMap>

    <select id="selectById" resultType="com.omega.springcloud.entity.User">
        SELECT id, name, pwd, mobile, email, gender FROM `user` WHERE id = #{id}
    </select>

    <update id="insert">
        INSERT INTO `user` VALUES (#{id}, #{name}, MD5(#{pwd}), #{mobile}, #{email}, #{gender});
    </update>
</mapper>